{
  "name": "market-data | bronze ingestion (micro-batch)",
  "max_concurrent_runs": 1,
  "tasks": [
    {
      "task_key": "ingest_bronze_market_bars",
      "description": "Ingest raw market bars into bronze_market_bars_raw (idempotent merge).",
      "notebook_task": {
        "notebook_path": "/Repos/<YOUR_REPO_PATH>/01-ingestion-bronze/notebooks/ingest_market_bars",
        "base_parameters": {
          "config_path": "dbfs:/FileStore/market-data/config/ingestion.json",
          "mode": "incremental",
          "as_of_utc": ""
        }
      },
      "job_cluster_key": "bronze_job_cluster",
      "timeout_seconds": 1800,
      "max_retries": 2,
      "min_retry_interval_millis": 60000,
      "retry_on_timeout": true
    }
  ],
  "job_clusters": [
    {
      "job_cluster_key": "bronze_job_cluster",
      "new_cluster": {
        "spark_version": "<DATABRICKS_RUNTIME_VERSION>",
        "node_type_id": "<NODE_TYPE>",
        "num_workers": 1,
        "data_security_mode": "SINGLE_USER",
        "spark_conf": {
          "spark.databricks.delta.optimizeWrite.enabled": "true",
          "spark.databricks.delta.autoCompact.enabled": "true"
        }
      }
    }
  ],
  "schedule": {
    "quartz_cron_expression": "0 0/5 * * * ?",
    "timezone_id": "UTC",
    "pause_status": "PAUSED"
  },
  "tags": {
    "project": "market-data-trend-lakehouse",
    "layer": "bronze"
  }
}
